@model List<Pizza>

@{
    Layout = null;
}

@if (Model.Count == 0)
{
    <h3> Non ci sono Post da Visualizzare!</h3>
}

<main class="container">
    <div class="container">
        <h2 class="my-3">Lista delle pizze: </h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Prezzo</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrizione</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Pizza pizza in Model)
                {
                <tr>
                    <td style="width: 8%">@pizza.Price $</td>
                    <td><img src="@pizza.Image" class="img-fluid" alt="@pizza.Name" width="500"></td>
                    <td style="width: 20%">Pizza Margherita by Cracco</td>
                    <td>@pizza.Description</td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</main>